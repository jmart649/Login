<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login"
        mc:Ignorable="d"
        Title="LoginPage" Height="450" Width="800">
    <StackPanel Background="OrangeRed" Margin="160,100,160.2,88.8">
        <Label Foreground="DarkBlue" FontWeight="Bold" Margin="185,10,185,0" >Username:</Label>
        <TextBox x:Name="myUsername" FontStyle="Italic" Width="100" Background="White" Margin="125,0"></TextBox>
        <Label Foreground="DarkBlue" FontWeight="Bold" Margin="185,1,185,1" Content="Password:" />
        <PasswordBox PasswordChar="*" x:Name="myPassword" Width="100"></PasswordBox>
        <Button Width="50" Margin="5" x:Name="myButton" Click="Button_Click" >Login</Button>
        <Image Source="coding.png" Width="100" Margin="1" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </StackPanel>
</Window>
